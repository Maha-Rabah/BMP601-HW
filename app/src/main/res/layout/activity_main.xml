<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D9C3C3"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="90dp"
        android:background="#9C27B0"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgLogo"
            android:layout_width="130dp"
            android:layout_height="123dp"
            android:layout_marginLeft="20dp"
            android:rotationX="0"
            android:src="@drawable/logo" />

        <TextView
            android:id="@+id/txtCompanyName"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:text=" شركة الأفراح"
            android:textColor="@color/white"
            android:textColorHighlight="#E91E63"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="90dp"
        android:backgroundTint="#D0C9C9"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btnGoToSecondActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="#3F9C27B0"
            android:text="إدارة المندوبين"
            android:textColor="#9C27B0"
            android:textColorLink="@color/black" />

        <Button
            android:id="@+id/btnGoToThirdActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="#3F9C27B0"
            android:text="إدارة المبيعات"
            android:textColor="#9C27B0" />

        <Button
            android:id="@+id/btnGoToFourthActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="#3F9C27B0"
            android:text="البحث عن المبيعات"
            android:textColor="#9C27B0" />

        <Button
            android:id="@+id/btnGoToFifthActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:backgroundTint="#3F9C27B0"
            android:text="البحث عن العمولات"
            android:textColor="#9C27B0"
            android:textColorHighlight="#9C27B0"
            android:textColorLink="#9C27B0" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="88dp"
            android:layout_weight="1"
            android:background="#9C27B0"
            android:gravity="center"
            android:text="Welcome To our App"
            android:textColor="@color/white"
            android:textSize="24dp" />
    </LinearLayout>

</LinearLayout>

